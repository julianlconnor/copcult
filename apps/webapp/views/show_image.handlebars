{{> header }}

<div id="content">
  <div class="container">

    <div class="show-image">
      <div class="seven columns">
        <img class="instagram-image" src="{{ standardResolution }}" />
        <p class="caption">{{ caption }}</p>
      </div>
      <div class="five columns">
        <div class="image-items">
          <h2>Gear</h2>
          {{# if images }}
            <ul class="items">
              {{# each images }}
                {{> profile/image }}
              {{/ each }}
            </ul>
          {{ else }}
            <h3>No one has recognized this style yet, will you be the first?</h3>
          {{/ if }}
        </div>
        <div class="add-item">
        </div>
      </div>
    </div>
  </div>

</div>

{{> footer }}
